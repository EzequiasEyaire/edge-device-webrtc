{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6",
         "DOM"
      ],
      "target": "es6",
      "module": "CommonJS",
      "moduleResolution": "Node10",
      "outDir": "./build",
      "experimentalDecorators": true,
      "sourceMap": true,
      "strictNullChecks": true,
      "esModuleInterop": true,
   },
   "include": ["src/**/*.ts"],
   "exclude": ["src/**/*.spec.ts"],
   "types": [
      "mocha"
   ]
}
